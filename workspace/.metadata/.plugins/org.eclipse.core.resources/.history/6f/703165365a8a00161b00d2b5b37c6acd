	   private void prepareGUI(){
	      mainFrame = new JFrame("Java SWING Examples");
	      mainFrame.setSize(400,400);
	      mainFrame.setLayout(new GridLayout(6, 3));

	      headerLabel = new JLabel("",JLabel.CENTER );
	      statusLabel = new JLabel("",JLabel.CENTER); 
	      
	      ruleModifierLabel = new JLabel("Rule Modifier",JLabel.LEFT);
	      ruleNameLabel = new JLabel("Rule Name",JLabel.LEFT);
	      
	      final JTextArea RuleNameArea = new JTextArea("",1,20);
	      final JTextArea RuleModifierArea = new JTextArea("",1,20);
	      final JTextArea RuleParameterArea = new JTextArea("",5,20);

	      //statusLabel.setSize(350,100);
	      mainFrame.addWindowListener(new WindowAdapter() {
	         public void windowClosing(WindowEvent windowEvent){
		        System.exit(0);
	         }        
	      });    
	      controlPanel = new JPanel();
	      controlPanel.setLayout(new FlowLayout());
	      
	      controlPanel.add(ruleModifierLabel);
	      controlPanel.add(ruleNameLabel);
	      controlPanel.add(ruleParameterLabel);
	      
	      fieldPanel.add(RuleNameArea);
	      fieldPanel.add(RuleNameArea);
	      fieldPanel.add(RuleNameArea);
	      
	      //mainFrame.add(ruleNameLabel);
	      //mainFrame.add(RuleNameArea);
	      mainFrame.add(controlPanel);
	      mainFrame.add(fieldPanel);
	     // mainFrame.add(statusLabel);
	      mainFrame.setVisible(true);  
	   }

	   /*private void showEventDemo(){
